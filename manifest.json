{
  "name": "Duty Management System",
  "short_name": "DutyManager",
  "description": "Staff duty and leave management mobile application",
  "start_url": "/?source=pwa",
  "scope": "/",
  "display": "standalone",
  "display_override": ["standalone", "minimal-ui"],
  "orientation": "portrait-primary",
  "background_color": "#f5f7fa",
  "theme_color": "#3498db",
  "categories": ["business", "productivity", "education"],
  "dir": "ltr",
  "lang": "en-US",
  "prefer_related_applications": false,
  "related_applications": [],
  
  "icons": [
    {
      "src": "/icons/icon-72x72.png",
      "sizes": "72x72",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icons/icon-96x96.png",
      "sizes": "96x96",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icons/icon-128x128.png",
      "sizes": "128x128",
      "type": "image/png"
    },
    {
      "src": "/icons/icon-144x144.png",
      "sizes": "144x144",
      "type": "image/png"
    },
    {
      "src": "/icons/icon-152x152.png",
      "sizes": "152x152",
      "type": "image/png"
    },
    {
      "src": "/icons/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icons/icon-384x384.png",
      "sizes": "384x384",
      "type": "image/png"
    },
    {
      "src": "/icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png"
    }
  ],
  
  "screenshots": [
    {
      "src": "/screenshots/mobile-dashboard.png",
      "sizes": "720x1280",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Dashboard view"
    },
    {
      "src": "/screenshots/mobile-roster.png",
      "sizes": "720x1280",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Duty roster"
    },
    {
      "src": "/screenshots/mobile-leave.png",
      "sizes": "720x1280",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Leave application"
    }
  ],
  
  "shortcuts": [
    {
      "name": "Apply Leave",
      "short_name": "Leave",
      "description": "Quick leave application form",
      "url": "/?shortcut=leave#leaveApplication",
      "icons": [{ "src": "/icons/shortcut-leave.png", "sizes": "96x96" }]
    },
    {
      "name": "Duty Change",
      "short_name": "Swap",
      "description": "Request duty change with colleague",
      "url": "/?shortcut=swap#dutyChange",
      "icons": [{ "src": "/icons/shortcut-swap.png", "sizes": "96x96" }]
    },
    {
      "name": "View Roster",
      "short_name": "Roster",
      "description": "Check duty schedule",
      "url": "/?shortcut=roster#viewAllRoster",
      "icons": [{ "src": "/icons/shortcut-roster.png", "sizes": "96x96" }]
    },
    {
      "name": "My Requests",
      "short_name": "Requests",
      "description": "View request status",
      "url": "/?shortcut=requests#myRequests",
      "icons": [{ "src": "/icons/shortcut-requests.png", "sizes": "96x96" }]
    }
  ],
  
  "protocol_handlers": [
    {
      "protocol": "web+duty",
      "url": "/?protocol=%s"
    }
  ],
  
  "edge_side_panel": {
    "preferred_width": 320
  },
  
  "launch_handler": {
    "client_mode": "auto"
  },
  
  "handle_links": "preferred",
  
  "permissions": [
    "notifications",
    "background-sync",
    "periodic-background-sync"
  ],
  
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  
  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "text/csv": [".csv"],
        "application/json": [".json"]
      }
    }
  ]
}
